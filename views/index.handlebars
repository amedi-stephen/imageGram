<div class="container">

    <div class="card mb-4">
        <div class="card-header bg-light">
            <h3 class="card-title">Upload an Image </h3>
        </div>
        <div class="card-body">
            <form action="/uploadImage" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title"><strong>Title:</strong></label>
                    <input type="text" name="title" class="form-control" placeholder="Title" required>
                </div>
                <div class="form-group">
                    <label for="description"><strong>Description:</strong></label>
                    <textarea name="description" class="form-control" id="exampleTextarea" rows="3" placeholder="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="image"><strong>Upload Image:</strong></label>
                    <input type="file" name="image" id="image" class="form-control-file">
                </div>
                <div class="form-group">
                    <a href="/" class="btn btn-danger">Cancel <i class="fa fa-recycle"></i> </a>
                    <button type="submit" class="btn btn-primary">Upload Image <i class="fa fa-upload"></i></button>
                </div>
            </form>
        </div>
    </div>
    <div class="card">
        <div class="card-header bg-light">
            <h3 class="card-title">
                Newest Images
            </h3>
        </div>
        <div class="card-body">
            <div class="container">
                <div class="row">
                    {{#each images}}
                    <div class="col-md-4">
                        <a href="/image/{{ uniqueId }}"><img src="/uploads/{{filename}}" alt={{title}} class="img-thumbnail"></a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>